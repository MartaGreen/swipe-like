header(class="header")
  button(class="btn btn_black btn_header header__btn") каталог
  
  .header__search 
    input(class="search__inp" placeholder="Я ищу...")
    .search__btn
      img(src="images/search.svg", alt="search")

  .header__user 
    .user__item(class="user__cart")
      img(src="images/cart.svg", alt="cart" class="item__icon")
      span(class="item__name") Корзина
    .user__item(class="user__profile")
      img(src="images/profile.svg", alt="profile" class="item__icon")
      span(class="item__name") Профиль
    .user__item(class="user__like")
      img(src="images/like.svg", alt="like" class="item__icon")
      span(class="item__name") Нравится
